{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "strict": false,
    "sourceMap": true,
    "rootDir": "./src/",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"]
}
